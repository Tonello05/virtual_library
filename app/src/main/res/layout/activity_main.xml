<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtual_library"
        android:fontFamily="@font/roboto"
        android:textSize="40sp"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btn_search_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cerca_libri"
        android:backgroundTint="@color/ButtonsColor"
        android:fontFamily="@font/roboto"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283"
        app:icon="@drawable/new_books_icon"
        app:iconSize="30sp"

        />

    <Button
        android:id="@+id/btn_my_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ButtonsColor"
        android:fontFamily="@font/roboto"
        android:text="@string/i_mie_libri"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        app:icon="@drawable/library"
        app:iconSize="30sp"
        />

    <Button
        android:id="@+id/btn_wish_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ButtonsColor"
        android:fontFamily="@font/roboto"
        android:text="@string/la_mia_lista_dei_desideri"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861"
        app:icon="@drawable/wishlist"
        app:iconSize="30sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>